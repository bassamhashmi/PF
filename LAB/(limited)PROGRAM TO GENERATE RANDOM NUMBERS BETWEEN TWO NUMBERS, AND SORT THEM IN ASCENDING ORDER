#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;


int main()
{
	int limit,n,j,temp ,min,max;

cout<<"PROGRAM TO GENERATE RANDOM NUMBERS BETWEEN TWO NUMBERS, AND SORT THEM IN ASCENDING ORDER......"<<endl;
cout<<"\n";

cout<<"How many random numbers do you want to generate? ";
cin>>limit;
cout<<"Enter minimum value:";
cin>>min;
cout<<"Enter maximum value:";
cin>>max;

int R[limit];


     srand((int)time(0));
	cout <<"\n RANDOM NUMBER ARE FOLLOWING: " << endl;
	for (int i=0 ; i<limit ; i++) {
		 R[i] = (rand() % max) + min;	
		cout <<R[i]<< "  \n";
	}
	for(int i=0;i<limit;i++)
	{		
		for(j=i+1;j<limit;j++)
		{
			if(R[i]>R[j])
			{
				temp  =R[i];
				R[i]=R[j];
				R[j]=temp;
			}
		}
	}
		cout<<"\n ASCENDING ORDER:"<<endl;
	for(int i=0;i<limit;i++)
		cout<<R[i]<<endl;
	cout<<endl;	
	return 0;
}
