#include <iostream>
using namespace std;

int main() {
	int a, b, c, sum;
	
	cout << "Enter first number: ";
	cin >> a;
	cout << "Enter second number: ";
	cin >> b;
	cout << "Enter third number: ";
	cin >> c;
	
	sum = a + b;
	
	if(sum > c){
		cout << "The sum of two numbers " << a << " and " << b << " is " << sum << " and it is greater than the third number " << c << endl;
	} else if(sum = c ){
		cout << "The sum of two numbers " << a << " and " << b << " is " << sum << " and it is equal to the third number " << c << endl;
	} else {
		cout << "The sum of two numbers " << a << " and " << b << " is " << sum << " and it is lesser than the third number " << c << endl;
	}
	return 0;
}
