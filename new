#include <iostream>
using namespace std;

int main(){
	int num[10], even[10], odd[10];
	int i, j;
	
	cout << "Program to seperate EVEN numbers and ODD numbers......" << endl;
	cout << "\n";
	
	// Input 10 numbers
	cout << "Enter 10 integers: ";
	for(i=1; i<=10; i++){
		cin >> num[i];
	}
	
	cout << "Input: ";
	for(i=1; i<=10; i++){
		cout << num[i] << " ";
	}
	
	cout << "\n";
	cout << "Even: ";
	for(i=1; i<=10; i++){
		if(num[i] % 2 == 0){
			even[i] = num[i];
			cout << even[i] << " ";
		}  
	}
	
	cout << "\n";
	cout << "Odd: ";
	for(i=1; i<=10; i++){
		if(num[i] % 2 != 0){
			odd[i] = num[i];
			cout << odd[i] << " ";
		}  
	}
	
		
	return 0;
}
